mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            
                sapn#currentTime 00:00 
                |/
                span#totalTime 10:00
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
            .videoPlayer__column
                span#jsScreen
                    i.fas.fa-expand
