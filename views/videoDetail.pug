extends layouts/main


block content
    .video_player   
        video(src=`/${video.fileUrl}`)
    .video_info
        a(href=routes.editVideo(video._id)) edit video
        h5=video.title
        span #{video.views}
        p #{video.description}
    .video_comment
        if video.comments.length === 1
            span 1 comment
        else
            span #{video.comments.length} comments
        

        