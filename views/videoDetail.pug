extends layouts/main


block content
    .video
        .video_player   
            video(src=`/${video.fileUrl}`, control = true)
            a(href=routes.editVideo(video._id)) edit video
            h5=video.title
            span 조회수 #{video.views}회
            p 내용 #{video.description}
            if video.comments.length === 1
                span 1 comment
            else
                span #{video.comments.length} comments
        

        